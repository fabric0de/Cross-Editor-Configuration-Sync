{
  "name": "cross-editor-configuration-sync",
  "displayName": "Cross-Editor Configuration Sync",
  "description": "Sync your settings, keybindings, snippets, and profiles across different IDEs (VS Code, Cursor, Antigravity, Windsurf, VSCodium, IDX)",
  "version": "0.2.1",
  "publisher": "fabric0de",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric0de/Cross-Editor-Configuration-Sync"
  },
  "icon": "resources/cecs-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cross-Editor Configuration Sync",
      "properties": {
        "cecs.customUserDataDir": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path to the user data directory (User/ folder). If set, this overrides the auto-detection logic. \n\nExample: `/Users/username/.config/VSCodium/User`"
        },
        "cecs.localBackupPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path to the local backup directory. If empty, defaults to `~/.cecs/config.json`."
        },
        "cecs.autoSync": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Automatically push settings when changes are detected in VS Code configuration files."
        },
        "cecs.autoInstallExtensions": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically install missing extensions when pulling settings from cloud storage."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cecs-sidebar",
          "title": "CECS",
          "icon": "resources/cecs-icon.svg"
        }
      ]
    },
    "views": {
      "cecs-sidebar": [
        {
          "type": "webview",
          "id": "cecs-sidebar-view",
          "name": "Configuration Sync",
          "icon": "resources/cecs-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "cecs.push",
        "title": "CECS: Push (Upload Settings)"
      },
      {
        "command": "cecs.pull",
        "title": "CECS: Pull (Download Settings)"
      },
      {
        "command": "cecs.sync",
        "title": "CECS: Sync (Push + Pull)"
      },
      {
        "command": "cecs.openSetup",
        "title": "CECS: Open Setup"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm run check-types && npm run lint && node esbuild.js --watch",
    "check-types": "tsc -p ./ --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"No tests configured\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^10.2.0",
    "prettier": "^3.7.4",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "jsonc-parser": "^3.3.1"
  }
}