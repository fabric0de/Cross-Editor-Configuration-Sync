{
  "name": "cross-editor-configuration-sync",
  "displayName": "Cross-Editor Configuration Sync",
  "description": "Sync your settings, keybindings, snippets, and profiles across different IDEs (VS Code, Cursor, Antigravity, Windsurf, VSCodium, IDX)",
  "version": "0.3.2",
  "publisher": "fabric0de",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric0de/Cross-Editor-Configuration-Sync"
  },
  "icon": "resources/cecs-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:cecs.sync",
    "onCommand:cecs.push",
    "onCommand:cecs.pull",
    "onView:cecs-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cross-Editor Configuration Sync",
      "properties": {
        "cecs.gistId": {
          "type": "string",
          "default": "",
          "description": "The ID of the Gist used for synchronization."
        },
        "cecs.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync configuration on startup and file changes."
        },
        "cecs.ignoredExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of extensions to ignore during synchronization."
        },
        "cecs.localBackupPath": {
          "type": "string",
          "default": "",
          "description": "Path to local backup file"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cecs-sidebar-view",
          "title": "Config Sync",
          "icon": "$(sync)"
        }
      ]
    },
    "views": {
      "cecs-sidebar-view": [
        {
          "type": "webview",
          "id": "cecs-sidebar",
          "name": "Configuration Sync"
        }
      ]
    },
    "commands": [
      {
        "command": "cecs.sync",
        "title": "Enable Sync",
        "category": "CECS"
      },
      {
        "command": "cecs.push",
        "title": "Push Configuration",
        "category": "CECS"
      },
      {
        "command": "cecs.pull",
        "title": "Pull Configuration",
        "category": "CECS"
      },
      {
        "command": "cecs.openSettings",
        "title": "Open Settings",
        "category": "CECS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run build:webview && npm run build:extension",
    "build:webview": "vite build",
    "build:extension": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:webview": "vite build --watch",
    "watch:extension": "node esbuild.js --watch",
    "package": "npm run check-types && npm run lint && npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc -p ./ --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.6",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^25.0.8",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "svelte": "^5.46.3",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "@vscode/codicons": "^0.0.44",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "jsonc-parser": "^3.3.1"
  }
}